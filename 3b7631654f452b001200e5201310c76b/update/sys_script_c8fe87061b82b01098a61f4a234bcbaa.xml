        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    try {
        var catalogs = new GlideRecord('x_nuta2_nutanix_ca_nutanix_runtime_configuration');
        catalogs.query();
        while (catalogs.next()) {
            hideOnSPPortal(catalogs.item_name + '', current.select_service_portal + '');
        }
    } catch (e) {
        gs.info('Inside Update Data on Portal Toggle Business Rule :: ' + e.message);
    }

    function hideOnSPPortal(item_name, select_portal) {
       
        var catalog_item = new GlideRecord('x_nuta2_nutanix_ca_nutanix_catalog_items');
        if (catalog_item.get(item_name)) {
            if (select_portal == 'true') 
                catalog_item.hide_sp = 'false';
             else 
                catalog_item.hide_sp = 'true';
            catalog_item.update();
        }
    }


})(current, previous);]]></script>
