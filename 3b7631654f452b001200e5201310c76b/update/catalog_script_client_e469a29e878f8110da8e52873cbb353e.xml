        <name>Validate Custom logo</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
   if (isLoading || newValue == '') {
      return;
   }
	var sysid = g_form.getElement('sysparm_item_guid').value;
	var ga = new GlideAjax('Nutanix_ClientServerScriptBridge');
    ga.addParam('sysparm_name', 'ValidateCustomLogo');
    ga.addParam('sysparm_sysid', sysid);
    ga.getXML(validateLogo);

	function validateLogo(response){
		var answer = response.responseXML.documentElement.getAttribute("answer");
		if(answer!='') {
			g_form.clearValue('catalog_image');
			g_form.addErrorMessage(answer);
		}
		else {
			g_form.clearMessages();
		}
	}
   
}]]></script>
